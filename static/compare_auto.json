{
  "openapi": "3.0.0",
  "info": {
    "title": "PCB Compare Tool",
    "description": "用于检测学生上传的 PCB 图片与标准板的差异区域。",
    "version": "1.0.0"
  },
  "paths": {
    "/compare_auto": {
      "post": {
        "summary": "自动比对 PCB 差异",
        "description": "上传学生电路板图片，自动与标准板对比，返回差异标记图。",
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "image": {
                    "type": "string",
                    "format": "binary",
                    "description": "学生上传的电路板图片"
                  }
                },
                "required": ["image"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "比对结果（含差异图与坐标）",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "similarity": {
                      "type": "number",
                      "description": "两张图片的相似度得分"
                    },
                    "diff_coordinates": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "x": { "type": "integer" },
                          "y": { "type": "integer" },
                          "w": { "type": "integer" },
                          "h": { "type": "integer" }
                        }
                      },
                      "description": "差异区域的坐标"
                    },
                    "result_image_base64": {
                      "type": "string",
                      "description": "标记差异后的图片（Base64 编码）"
                    },
                    "standard_used": {
                      "type": "string",
                      "description": "使用的标准电路板文件名"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}

